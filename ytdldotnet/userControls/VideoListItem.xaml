<UserControl x:Class="ytdldotnet.userControls.VideoListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ytdldotnet.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ThumbnailImage"  Width="160" Height="90" Source="{Binding Path=ThumbnailUrl}" Grid.RowSpan="2" Grid.Column="0"/>
        <Label x:Name="VideoTitleLabel" Content="{Binding Path=VideoTitle}" Grid.Row="0" Grid.Column="1"/>
        <Label x:Name="VideoLengthLabel" Content="{Binding Path=VideoLength}" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</UserControl>
